{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "rebaseWhen": "behind-base-branch",
    "automerge": true,
    "labels": [
        "dependencies"
    ],
    "extends": [
        "config:recommended"
    ],
    "packageRules": [
        {
            "matchPackageNames": [
                "composer/composer"
            ],
            "enabled": true
        },
        {
            "matchFileNames": [
                "lts/Dockerfile"
            ],
            "matchPackageNames": [
                "composer/composer"
            ],
            "versioning": "semver"
        }
    ],
    "customManagers": [
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/latest/Dockerfile$/"
            ],
            "matchStrings": [
                "ENV COMPOSER_VERSION=[\"']?(?<currentValue>\\d+\\.\\d+\\.\\d+)[\"']?\\s+"
            ],
            "datasourceTemplate": "github-releases",
            "depNameTemplate": "composer/composer",
            "commitMessageAction": "Latest",
            "groupName": "composer (latest)"
        },
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/lts/Dockerfile$/"
            ],
            "matchStrings": [
                "ENV COMPOSER_VERSION=[\"']?(?<currentValue>2\\.\\d+\\.\\d+)[\"']?\\s+"
            ],
            "datasourceTemplate": "github-releases",
            "depNameTemplate": "composer/composer",
            "commitMessageAction": "LTS",
            "groupName": "composer (lts)"
        }
    ]
}
